{
  "id": "orientus",
  "name": "Advanced Navigation Orientus Driver",
  "description": "ROS 2 BlueOS extension to publish IMU/orientation from the Advanced Navigation Orientus.",
  "version": "0.1.0",
  "image": "christian99999/orientus-blueos:latest",
  "architecture": ["arm64", "amd64"],
  "services": [
    {
      "name": "orientus",
      "image": "christian99999/orientus-blueos:latest",
      "privileged": true,
      "network_mode": "host",
      "devices": ["/dev/serial/by-id/usb-FTDI_*:/dev/serial/by-id/usb-FTDI_*"],
      "environment": {
        "ROS_DOMAIN_ID": "30",
        "FASTDDS_TRANSPORT_SHM_DISABLED": "1",
        "BAUD": "115200",
        "PORT": "/dev/serial/by-id/usb-FTDI_*",
        "BAG": "0"
      },
      "volumes": ["/data/logs:/data/logs"],
      "webui": { "port": 8080, "path": "/" }
    }
  ],
  "maintainer": "Christian Ceravolo <christian_ceravolo@hotmail.com>",
  "license": "MIT"
}
